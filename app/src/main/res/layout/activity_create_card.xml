<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/myBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateCardActivity">

    <Button
        android:id="@+id/x_mark"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="5dp"
        android:elevation="10dp"
        android:background="@drawable/ic_x_mark"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="304dp"
        tools:layout_editor_absoluteY="455dp" />
    <Button
        android:id="@+id/save_mark"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="5dp"
        android:elevation="10dp"
        android:background="@drawable/ic_check_mark"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="304dp"
        tools:layout_editor_absoluteY="455dp" />

    <EditText
        android:id="@+id/create_Question"
        android:layout_width="350dp"
        android:layout_height="195dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:elevation="10dp"
        android:background="@drawable/card_background"
        android:text="Enter question"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/create_Answer"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:elevation="10dp"
        android:background="@drawable/card_background"
        android:text="Answer 1"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/create_Answer2"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="310dp"
        android:elevation="10dp"
        android:background="@drawable/card_background"
        android:text="Wrong Answer 1"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/create_Answer3"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370dp"
        android:elevation="10dp"
        android:background="@drawable/card_background"
        android:text="Wrong Answer 2"
        android:textAlignment="center" />
</RelativeLayout>